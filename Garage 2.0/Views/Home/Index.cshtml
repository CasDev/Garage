@{
    ViewBag.Title = "Garage 2.0";
}

<div class="jumbotron">
    <h1>Garage 2.0</h1>
    <p class="lead">The app for managing enterprise garages by Team Alpha!</p>
    <p><a href="@Url.Content("~/Vehicles/ParkVehicle")" class="btn btn-primary btn-lg">Park a Vehicle &raquo;</a></p>
</div>

<div class="row">
    <div class="col-md-4">
        <h2>Park Vehicle</h2>
        <p>
            To park a vehicle just enter the information into a simple form.
        </p>
        <p><a class="btn btn-default" href="@Url.Content("~/Vehicles/ParkVehicle")">Park Vehicle &raquo;</a></p>
    </div>
    <div class="col-md-4">
        <h2>Check Out Vehicle</h2>
        <p>Easy Check-Out </p>
        <p><a class="btn btn-default" href="@Url.Content("~/Vehicles/CheckOutVehicle")">Check Out a Vehicle &raquo;</a></p>
    </div>
    <div class="col-md-4">
        <h2>View Vehicles</h2>
        <p>Get an overview of the parked vehicles in your garage.</p>
        <p><a class="btn btn-default" href="@Url.Content("~/Vehicles/ViewVehicles")">View Parked Vehicles &raquo;</a></p>
    </div>
</div>